---
interface MenuItem {
  icon?: string;
  title: string;
  url: string;
}

export const menu: MenuItem[] = [
  {
    icon: "🏠",
    title: "Home",
    url: "/",
  },
  {
    icon: "👨‍💻",
    title: "Projets",
    url: "/projects",
  },
  {
    icon: "🛠️",
    title: "Outils",
    url: "/tools",
  },
];
---

<header>
  <ul class="flex items-center gap-2">
    {
      menu.map((item) => (
        <li>
          <a
            title={item.title}
            href={item.url}
            class="flex gap-1 items-center border-zinc-700/75 border rounded-full px-4 py-1.5 bg-zinc-900/55 hover:bg-zinc-800/75 duration-300 transition-colors"
          >
            <span>{item.icon}</span>
            <span class="hidden sm:block">{item.title}</span>
          </a>
        </li>
      ))
    }
  </ul>
</header>
