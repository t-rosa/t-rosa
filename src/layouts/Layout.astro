---
import Header from "../components/Header.astro";
import ProfileCard from "../components/ProfileCard.astro";
import Squares from "../components/Squares.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="fr" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Portfolio de Toma ROSA, Ingénieur logiciel spécialisé en développement web, avec un Master 2 et 5 ans d'expérience chez Astradal. Découvrez mes projets innovants, mes contributions open source et ma passion pour les technologies modernes."
    />

    <title>Toma Rosa</title>
  </head>
  <body class="h-full bg-zinc-900 text-zinc-50 text-balance antialiased">
    <Squares />
    <div
      class="radial -z-10 opacity-90 absolute size-full blur-xl mix-blend-lighten"
    >
    </div>

    <div class="grid grid-row-3 gap-3 mx-auto max-w-4xl p-4 sm:p-6 lg:p-8">
      <Header />
      <ProfileCard />
      <slot />
    </div>
  </body>
</html>
